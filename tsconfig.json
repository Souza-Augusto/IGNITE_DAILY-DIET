{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@dtos/*": ["src/dtos/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/views/components/*"],
      "@view-models/*": ["./src/view-models/*"],
      "@screens/*": ["./src/views/screens/*"],
      "@storage/*": ["./src/infra/storage/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@theme/*": ["./src/theme/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@routes/*": ["./src/routes/*"],
      "@mappers/*": ["./src/mappers/*"],
      "@__mocks__/*": ["./src/__mocks__/*"]
    }
  }
}
